  <div class="container">
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
      <%= image_tag "image.png", alt: "GrowFund Logo", height: 40, class: "me-2" %>
      <span class="fw-bold fs-4">GrowFund</span>
    <% end %>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto align-items-lg-center">
        <li class="nav-item "><%= link_to 'Home', root_path, class: "nav-link px-3 fw-medium text-white fs-5 fw-bold" %></li>
        <li class="nav-item"><%= link_to 'About', '/pages/about', class: "nav-link px-3 fw-medium text-white fs-5 fw-bold" %></li>
        <li class="nav-item"><%= link_to 'Services', '/pages/sevices', class: "nav-link px-3 fw-medium text-white fs-5 fw-bold" %></li>
       
        <li class="nav-item"><%= link_to 'Careers', '/pages/career', class: "nav-link px-3 fw-medium text-white fs-5 fw-bold" %></li>
        <li class="nav-item"><%= link_to 'Contact', '/pages/contact', class: "nav-link px-3 fw-medium text-white fs-5 fw-bold" %></li>
